{
    "name": "phpsimple/dbal-utc-datetime",
    "description": "Php Simple Doctrine DBAL UTC Types",
    "type": "library",
    "keywords": [
        "datetime",
        "datetimeimmutable",
        "dbal",
        "doctrine",
        "php",
        "utc"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "simpletoimplement",
            "email": "simpletoimplement@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0.0",
        "doctrine/dbal": "*",
        "phpsimple/orm-traits": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "PhpSimple\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpSimple\\Tests\\": "tests/src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-simple": "1.x-dev"
        },
        "thanks": {
            "name": "phpsimple/dbal-utc-datetime",
            "url": "https://github.com/phpsimple/dbal-utc-datetime"
        }
    },
    "funding": [
        {
            "type": "issuehunt",
            "url": "https://issuehunt.io/r/phpsimple/dbal-utc-datetime"
        }
    ]
}
